<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/ll_fb_cl_root">

    <ScrollView android:id="@+id/sv_channel" style="@style/sv_fb_cl_main">

        <LinearLayout style="@style/ll_fb_cl_main">

            <LinearLayout style="@style/ll_fb_cl_top">
                <ImageView android:id="@+id/ivBACK" style="@style/iv_fb_cl_back" android:src="@drawable/arrow_back_black" />
                <TextView android:id="@+id/tvTitle" style="@style/tv_fb_cl_title" android:text="选择发布类别" />
            </LinearLayout>

            <LinearLayout style="@style/ll_fb_cl_row">
                <LinearLayout android:id="@+id/llESC" style="@style/ll_fb_cl_item">
                    <ImageView android:id="@+id/ivESC" style="@style/iv_fb_cl_item" android:src="@drawable/fb_cl_esc" />
                    <LinearLayout style="@style/ll_fb_cl_item_text">
                        <TextView style="@style/tv_fb_cl_item" android:text="二手车转让" />
                        <TextView style="@style/tv_fb_cl_item_remark" android:text="轿车、越野车/SUV、MPV、面包车" />
                    </LinearLayout>
                    <ImageView style="@style/iv_fb_cl_forward" android:src="@drawable/arrow_forward_black" />
                </LinearLayout>
                <LinearLayout android:id="@+id/llGCC" style="@style/ll_fb_cl_item">
                    <ImageView android:id="@+id/ivGCC" style="@style/iv_fb_cl_item" android:src="@drawable/fb_cl_gcc" />
                    <LinearLayout style="@style/ll_fb_cl_item_text">
                        <TextView style="@style/tv_fb_cl_item" android:text="工程车转让" />
                        <TextView style="@style/tv_fb_cl_item_remark" android:text="挖掘机、装载机、洒水车" />
                    </LinearLayout>
                    <ImageView style="@style/iv_fb_cl_forward" android:src="@drawable/arrow_forward_black" />
                </LinearLayout>
                <LinearLayout android:id="@+id/llHC" style="@style/ll_fb_cl_item">
                    <ImageView android:id="@+id/ivHC" style="@style/iv_fb_cl_item" android:src="@drawable/fb_cl_hc" />
                    <LinearLayout style="@style/ll_fb_cl_item_text">
                        <TextView style="@style/tv_fb_cl_item" android:text="货车转让" />
                        <TextView style="@style/tv_fb_cl_item_remark" android:text="载货车、自卸车、封闭货车" />
                    </LinearLayout>
                    <ImageView style="@style/iv_fb_cl_forward" android:src="@drawable/arrow_forward_black" />
                </LinearLayout>
                <LinearLayout android:id="@+id/llKC" style="@style/ll_fb_cl_item">
                    <ImageView android:id="@+id/ivKC" style="@style/iv_fb_cl_item" android:src="@drawable/fb_cl_kc" />
                    <LinearLayout style="@style/ll_fb_cl_item_text">
                        <TextView style="@style/tv_fb_cl_item" android:text="客车转让" />
                        <TextView style="@style/tv_fb_cl_item_remark" android:text="金龙、福田、安凯、宇通" />
                    </LinearLayout>
                    <ImageView style="@style/iv_fb_cl_forward" android:src="@drawable/arrow_forward_black" />
                </LinearLayout>
                <LinearLayout android:id="@+id/llQCPJ" style="@style/ll_fb_cl_item">
                    <ImageView android:id="@+id/ivQCPJ" style="@style/iv_fb_cl_item" android:src="@drawable/fb_cl_qcpj" />
                    <LinearLayout style="@style/ll_fb_cl_item_text">
                        <TextView style="@style/tv_fb_cl_item" android:text="汽车配件" />
                        <TextView style="@style/tv_fb_cl_item_remark" android:text="轮胎、轮毂、机油" />
                    </LinearLayout>
                    <ImageView style="@style/iv_fb_cl_forward" android:src="@drawable/arrow_forward_black" />
                </LinearLayout>
                <LinearLayout android:id="@+id/llESCQG" style="@style/ll_fb_cl_item">
                    <ImageView android:id="@+id/ivESCQG" style="@style/iv_fb_cl_item" android:src="@drawable/fb_cl_escqg" />
                    <LinearLayout style="@style/ll_fb_cl_item_text">
                        <TextView style="@style/tv_fb_cl_item" android:text="二手车求购" />
                        <TextView style="@style/tv_fb_cl_item_remark" android:text="车辆求购" />
                    </LinearLayout>
                    <ImageView style="@style/iv_fb_cl_forward" android:src="@drawable/arrow_forward_black" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>