<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/fb_fc_qt_cz" xmlns:android="http://schemas.android.com/apk/res/android" style="@style/ll_fb_root">

    <ScrollView android:id="@+id/sv_channel" style="@style/sv_fb_main">

        <LinearLayout style="@style/ll_fb_main">

            <LinearLayout style="@style/ll_fb_top">
                <ImageView android:id="@+id/iv_back" style="@style/iv_fb_back" android:src="@drawable/arrow_back_black" />
                <TextView style="@style/tv_fb_title" android:text="出租" />
            </LinearLayout>

            <LinearLayout style="@style/ll_fb_head">
                <LinearLayout android:id="@+id/ll_fb_head_tp" style="@style/ll_fb_head_tp">
                    <TextView android:id="@+id/tv_yhm" style="@style/tv_fb_head_sczp" />
                    <ImageView android:id="@+id/iv_sczp" style="@style/iv_fb_head_sczp" android:src="@drawable/grzx_sczp_blue" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_split">

            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_title">
                <TextView android:text="基本信息" style="@style/tv_content_middle_title" />
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_qt_lx" style="@style/ll_content_middle_vertical">
                <TextView android:text="类型" style="@style/tv_content_middle_vertical_text" />
                <TextView android:id="@+id/tv_qt_lx" android:hint="请选择" style="@style/tv_content_middle_vertical_value" />
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_qt_qy" style="@style/ll_content_middle_vertical">
                <TextView android:text="所在区域" style="@style/tv_content_middle_vertical_text" />
                <TextView android:id="@+id/tv_qt_qy" android:text="请选择" style="@style/tv_content_middle_vertical_value" />
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_horizontal">
                <LinearLayout android:id="@+id/ll_qt_mj" style="@style/ll_content_middle_vertical" android:layout_width="205dp">
                    <TextView style="@style/tv_content_middle_vertical_text" android:text="面积" />
                    <TextView android:id="@+id/tv_qt_mj" style="@style/tv_content_middle_vertical_value" android:hint="请填写" />
                </LinearLayout>
                <LinearLayout style="@style/ll_content_middle_vertical_split">

                </LinearLayout>
                <LinearLayout android:id="@+id/ll_qt_zj" style="@style/ll_content_middle_vertical" android:layout_width="205dp">
                    <TextView style="@style/tv_content_middle_vertical_text" android:text="租金" />
                    <TextView android:id="@+id/tv_qt_zj" style="@style/tv_content_middle_vertical_value" android:hint="请填写" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_qt_bt" style="@style/ll_content_middle_vertical">
                <TextView android:text="标题" style="@style/tv_content_middle_vertical_text" />
                <EditText android:id="@+id/et_qt_bt" android:hint="请填写" style="@style/tv_content_middle_vertical_value" />
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_qt_ms" style="@style/ll_content_middle_vertical">
                <TextView android:text="描述" style="@style/tv_content_middle_vertical_text" />
                <EditText android:id="@+id/et_qt_ms" android:hint="请填写" style="@style/tv_content_middle_vertical_value" />
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_split">

            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_title">
                <TextView android:text="联系人" style="@style/tv_content_middle_title" />
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_horizontal" android:layout_height="60dp">
                <LinearLayout android:id="@+id/ll_qt_lxrmc" style="@style/ll_content_middle_vertical" android:layout_width="204dp" android:layout_height="60dp">
                    <EditText android:id="@+id/et_qt_lxrmc" style="@style/tv_content_middle_vertical_value" android:hint="请填写姓名" />
                </LinearLayout>
                <LinearLayout style="@style/ll_content_middle_vertical_split">

                </LinearLayout>
                <LinearLayout android:id="@+id/ll_qt_lxrsf" style="@style/ll_content_middle_vertical" android:layout_width="204dp" android:layout_height="60dp">
                    <TextView android:id="@+id/tv_qt_lxrsf" style="@style/tv_content_middle_vertical_value" android:hint="请选择身份" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_qt_lxrlxdh" style="@style/ll_content_middle_vertical">
                <TextView style="@style/tv_content_middle_vertical_text" android:text="为保护隐私，您的真实号码将被隐藏" />
                <TextView android:id="@+id/tv_qt_lxrlxdh" style="@style/tv_content_middle_vertical_value" android:hint="请填写手机号" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout style="@style/ll_dbcd_nextstep">
        <TextView android:id="@+id/tv_dbcd_fb" style="@style/tv_dbcd_nextstep" android:text="确定发布" />
    </LinearLayout>

</LinearLayout>