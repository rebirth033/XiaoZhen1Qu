<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/fb_cl_jc2" xmlns:android="http://schemas.android.com/apk/res/android" style="@style/ll_fb_root">

    <ScrollView android:id="@+id/sv_channel" style="@style/sv_fb_main">

        <LinearLayout style="@style/ll_fb_main">

            <LinearLayout style="@style/ll_fb_top">
                <ImageView android:id="@+id/iv_back" style="@style/iv_fb_back" android:src="@drawable/arrow_back_black" />
                <TextView style="@style/tv_fb_title" android:text="二手车发布" />
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_title">
                <TextView android:text="更多车辆信息" style="@style/tv_content_middle_title" />
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_jc_kcdd" style="@style/ll_content_middle_vertical">
                <TextView android:text="看车地点" style="@style/tv_content_middle_vertical_text" />
                <EditText android:id="@+id/et_jc_kcdd" android:hint="请输入" style="@style/tv_content_middle_vertical_value" />
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_horizontal">

                <LinearLayout android:id="@+id/ll_jc_pzxx" style="@style/ll_content_middle_vertical" android:layout_width="205dp">
                    <TextView style="@style/tv_content_middle_vertical_text" android:text="牌照信息" />
                    <TextView android:id="@+id/tv_jc_pzxx" style="@style/tv_content_middle_vertical_value" android:hint="请选择" />
                </LinearLayout>
                <LinearLayout style="@style/ll_content_middle_vertical_split">

                </LinearLayout>
                <LinearLayout android:id="@+id/ll_jc_ghcs" style="@style/ll_content_middle_vertical" android:layout_width="205dp">
                    <TextView style="@style/tv_content_middle_vertical_text" android:text="过户次数" />
                    <TextView android:id="@+id/tv_jc_ghcs" style="@style/tv_content_middle_vertical_value" android:hint="请选择" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_horizontal">
                <LinearLayout android:id="@+id/ll_jc_jzpz" style="@style/ll_content_middle_vertical" android:layout_width="410dp">
                    <TextView style="@style/tv_content_middle_vertical_text" android:text="加装配置" />
                    <TextView android:id="@+id/tv_jc_jzpz" style="@style/tv_content_middle_vertical_value" android:hint="请选择" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_title">
                <TextView android:text="补充说明" style="@style/tv_content_middle_title" />
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_jc_ckms" style="@style/ll_content_middle_vertical">
                <TextView android:text="车况描述" style="@style/tv_content_middle_vertical_text" />
                <TextView android:id="@+id/tv_jc_ckms" android:hint="请输入" style="@style/tv_content_middle_vertical_value" />
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_title">
                <TextView android:text="个人信息(必填)" style="@style/tv_content_middle_title" />
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_horizontal" android:layout_height="60dp">
                <LinearLayout android:id="@+id/ll_esf_lxrmc" style="@style/ll_content_middle_vertical" android:layout_width="204dp" android:layout_height="60dp">
                    <EditText android:id="@+id/et_esf_lxrmc" style="@style/tv_content_middle_vertical_value" android:hint="请填写姓名" />
                </LinearLayout>
                <LinearLayout style="@style/ll_content_middle_vertical_split">

                </LinearLayout>
                <LinearLayout android:id="@+id/ll_jc_lxrsf" style="@style/ll_content_middle_vertical" android:layout_width="204dp" android:layout_height="60dp">
                    <TextView android:id="@+id/tv_jc_lxrsf" style="@style/tv_content_middle_vertical_value" android:text="请选择身份" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_jc_lxrlxdh" style="@style/ll_content_middle_vertical">
                <TextView style="@style/tv_content_middle_vertical_text" android:text="为保护隐私，您的真实号码将被隐藏" />
                <TextView android:id="@+id/tv_jc_lxrlxdh" style="@style/tv_content_middle_vertical_value" android:text="请填写手机号" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout style="@style/ll_dbcd_nextstep">
        <TextView android:id="@+id/tv_dbcd_fb" style="@style/tv_dbcd_nextstep" android:text="确定发布" />
    </LinearLayout>

</LinearLayout>