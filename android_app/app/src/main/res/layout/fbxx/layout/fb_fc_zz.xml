<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/ll_fb_fc_zz_root">

    <ScrollView android:id="@+id/sv_channel" style="@style/sv_fb_fc_zz_main">

        <LinearLayout style="@style/ll_fb_fc_zz_main">

            <LinearLayout style="@style/ll_fb_fc_zz_top">
                <ImageView android:id="@+id/ivBACK" style="@style/iv_fb_fc_zz_back" android:src="@drawable/arrow_back_black" />
                <TextView android:id="@+id/tvTitle" style="@style/tv_fb_fc_zz_title" android:text="整租发布" />
            </LinearLayout>

            <LinearLayout style="@style/ll_fb_head">
                <LinearLayout style="@style/ll_fb_head_tp">
                    <TextView android:id="@+id/tvSCZP" style="@style/tv_fb_head_sczp" />
                    <ImageView android:id="@+id/ivSCZP" style="@style/iv_fb_head_sczp" android:src="@drawable/grzx_sczp_blue" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_split">

            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_title">
                <TextView android:text="基本信息" style="@style/tv_content_middle_title" />
            </LinearLayout>

            <LinearLayout android:id="@+id/llXQ" style="@style/ll_content_middle_vertical">
                <TextView android:text="小区" style="@style/tv_content_middle_vertical_text" />
                <TextView android:id="@+id/tv_xq" android:text="填写小区名称" style="@style/tv_content_middle_vertical_value" />
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_mj" style="@style/ll_content_middle_vertical">
                <TextView android:text="面积" style="@style/tv_content_middle_vertical_text" />
                <TextView android:text="请填写面积" style="@style/tv_content_middle_vertical_value" />
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_horizontal">
                <LinearLayout android:id="@+id/ll_ts" style="@style/ll_content_middle_vertical" android:layout_width="130dp">
                    <TextView android:text="厅室" style="@style/tv_content_middle_vertical_text" />
                    <TextView android:text="请选择" style="@style/tv_content_middle_vertical_value" />
                </LinearLayout>
                <LinearLayout android:id="@+id/ll_cx" style="@style/ll_content_middle_vertical" android:layout_width="130dp">
                    <TextView android:text="朝向" style="@style/tv_content_middle_vertical_text" />
                    <TextView android:text="请选择" style="@style/tv_content_middle_vertical_value" />
                </LinearLayout>
                <LinearLayout android:id="@+id/ll_lc" style="@style/ll_content_middle_vertical" android:layout_width="130dp">
                    <TextView android:text="楼层" style="@style/tv_content_middle_vertical_text" />
                    <TextView android:text="请选择" style="@style/tv_content_middle_vertical_value" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_horizontal">
                <LinearLayout android:id="@+id/ll_cw" style="@style/ll_content_middle_vertical" android:layout_width="195dp">
                    <TextView android:text="车位" style="@style/tv_content_middle_vertical_text" />
                    <TextView android:text="请选择" style="@style/tv_content_middle_vertical_value" />
                </LinearLayout>
                <LinearLayout android:id="@+id/ll_dt" style="@style/ll_content_middle_vertical" android:layout_width="195dp">
                    <TextView android:text="电梯" style="@style/tv_content_middle_vertical_text" />
                    <TextView android:text="请选择" style="@style/tv_content_middle_vertical_value" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_split">

            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_title">
                <TextView android:text="租金详情" style="@style/tv_content_middle_title" />
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_zj" style="@style/ll_content_middle_vertical">
                <TextView android:text="月租金" style="@style/tv_content_middle_vertical_text" />
                <TextView android:text="请填写" style="@style/tv_content_middle_vertical_value" />
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_zjbhfy" style="@style/ll_content_middle_vertical">
                <TextView android:text="租金包含费用" style="@style/tv_content_middle_vertical_text" />
                <TextView android:text="请填写" style="@style/tv_content_middle_vertical_value" />
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_split">

            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_title">
                <TextView android:text="联系人" style="@style/tv_content_middle_title" />
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_horizontal">
                <LinearLayout android:id="@+id/ll_lxrmc" style="@style/ll_content_middle_vertical" android:layout_width="195dp">
                    <TextView android:text="请填写姓名" style="@style/tv_content_middle_vertical_value" />
                </LinearLayout>
                <LinearLayout android:id="@+id/ll_lxrxb" style="@style/ll_content_middle_vertical" android:layout_width="195dp">
                    <TextView android:text="请填写性别" style="@style/tv_content_middle_vertical_value" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_sjh" style="@style/ll_content_middle_vertical">
                <TextView android:text="为保护隐私，您的真实号码将被隐藏" style="@style/tv_content_middle_vertical_text" />
                <TextView android:text="请填写手机号" style="@style/tv_content_middle_vertical_value" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>