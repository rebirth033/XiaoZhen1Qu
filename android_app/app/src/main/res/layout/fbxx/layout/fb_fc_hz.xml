<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/fb_fc_hz" xmlns:android="http://schemas.android.com/apk/res/android" style="@style/ll_fb_fc_hz_root">

    <ScrollView android:id="@+id/sv_channel" style="@style/sv_fb_fc_hz_main">

        <LinearLayout style="@style/ll_fb_fc_hz_main">

            <LinearLayout style="@style/ll_fb_fc_hz_top">
                <ImageView android:id="@+id/iv_back" style="@style/iv_fb_fc_hz_back" android:src="@drawable/arrow_back_black" />
                <TextView style="@style/tv_fb_fc_hz_title" android:text="（1/2）房源信息" />
            </LinearLayout>

            <LinearLayout style="@style/ll_fb_head">
                <LinearLayout android:id="@+id/ll_fb_head_tp" style="@style/ll_fb_head_tp">
                    <TextView android:id="@+id/tv_yhm" style="@style/tv_fb_head_sczp" />
                    <ImageView android:id="@+id/iv_sczp" style="@style/iv_fb_head_sczp" android:src="@drawable/grzx_sczp_blue" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_hz_xqmc" style="@style/ll_content_middle_vertical">
                <TextView android:text="小区" style="@style/tv_content_middle_vertical_text" />
                <TextView android:id="@+id/tv_hz_xqmc" android:text="请选择小区" style="@style/tv_content_middle_vertical_value" />
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_horizontal">
                <LinearLayout android:id="@+id/ll_hz_ts" style="@style/ll_content_middle_vertical" android:layout_width="204dp">
                    <TextView style="@style/tv_content_middle_vertical_text" android:text="户型" />
                    <TextView android:id="@+id/tv_hz_ts" style="@style/tv_content_middle_vertical_value" android:text="请选择" />
                </LinearLayout>
                <LinearLayout style="@style/ll_content_middle_vertical_split">

                </LinearLayout>
                <LinearLayout android:id="@+id/ll_hz_lc" style="@style/ll_content_middle_vertical" android:layout_width="204dp">
                    <TextView style="@style/tv_content_middle_vertical_text" android:text="楼层" />
                    <TextView android:id="@+id/tv_hz_lc" style="@style/tv_content_middle_vertical_value" android:text="请选择" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/ll_content_middle_horizontal">
                <LinearLayout android:id="@+id/ll_hz_wslx" style="@style/ll_content_middle_vertical" android:layout_width="204dp">
                    <TextView style="@style/tv_content_middle_vertical_text" android:text="卧室类型" />
                    <TextView android:id="@+id/tv_hz_wslx" style="@style/tv_content_middle_vertical_value" android:text="请选择" />
                </LinearLayout>
                <LinearLayout style="@style/ll_content_middle_vertical_split">

                </LinearLayout>
                <LinearLayout android:id="@+id/ll_hz_wscx" style="@style/ll_content_middle_vertical" android:layout_width="204dp">
                    <TextView style="@style/tv_content_middle_vertical_text" android:text="卧室朝向" />
                    <TextView android:id="@+id/tv_hz_wscx" style="@style/tv_content_middle_vertical_value" android:text="请选择" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_hz_mj" style="@style/ll_content_middle_vertical">
                <TextView style="@style/tv_content_middle_vertical_text" android:text="面积" />
                <TextView android:id="@+id/tv_hz_mj" style="@style/tv_content_middle_vertical_value" android:hint="请填写面积" />
            </LinearLayout>

            <LinearLayout android:id="@+id/ll_hz_zj" style="@style/ll_content_middle_vertical">
                <TextView style="@style/tv_content_middle_vertical_text" android:text="月租金" />
                <LinearLayout style="@style/ll_content_middle_horizontal">
                    <TextView android:id="@+id/tv_hz_zj" style="@style/tv_content_middle_vertical_value" android:layout_width="100dp" android:layout_marginLeft="142dp" android:hint="请填写租金" />
                    <TextView android:id="@+id/tv_hz_yffs" style="@style/tv_content_middle_vertical_yffs" android:text="押一付三" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout style="@style/ll_dbcd_nextstep">
        <TextView android:id="@+id/tv_dbcd_nextstep" style="@style/tv_dbcd_nextstep" android:text="下一步" />
    </LinearLayout>

</LinearLayout>