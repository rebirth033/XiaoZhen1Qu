                </LinearLayout>
                <LinearLayout android:id="@+id/llDYTX" style="@style/ll_xx_main_fl_item">
                    <ImageView android:id="@+id/ivDYTX" style="@style/iv_xx_main_fl_item" android:src="@drawable/xx_dytx" />
                    <TextView android:id="@+id/tvDYTX" style="@style/tv_xx_main_fl_item" android:text="订阅提醒" />
                </LinearLayout>
                <LinearLayout android:id="@+id/llJRTJ" style="@style/ll_xx_main_fl_item">
                    <ImageView android:id="@+id/ivJRTJ" style="@style/iv_xx_main_fl_item" android:src="@drawable/xx_jrtj" />
                    <TextView android:id="@+id/tvJRTJ" style="@style/tv_xx_main_fl_item" android:text="今日推荐" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout style="@style/ll_dbcd">
        <LinearLayout android:id="@+id/llSY" style="@style/ll_dbcd_item">
            <ImageView android:id="@+id/ivSY" style="@style/iv_dbcd_item" android:src="@drawable/dbcd_sy" />
            <TextView android:id="@+id/tvSY" style="@style/tv_dbcd_item" android:text="首页" />
        </LinearLayout>
        <LinearLayout android:id="@+id/llFB" style="@style/ll_dbcd_item">
            <ImageView android:id="@+id/ivFB" style="@style/iv_dbcd_item" android:src="@drawable/dbcd_fb" />
            <TextView android:id="@+id/tvFB" style="@style/tv_dbcd_item" android:text="发布" />
        </LinearLayout>
        <LinearLayout android:id="@+id/llXX" style="@style/ll_dbcd_item">
            <ImageView android:id="@+id/ivXX" style="@style/iv_dbcd_item" android:src="@drawable/dbcd_xx" />
            <TextView android:id="@+id/tvXX" style="@style/tv_dbcd_item" android:text="消息" />
        </LinearLayout>
        <LinearLayout android:id="@+id/llGRZX" style="@style/ll_dbcd_item">
            <ImageView android:id="@+id/ivGRZX" style="@style/iv_dbcd_item" android:src="@drawable/dbcd_grzx" />
            <TextView android:id="@+id/tvGRZX" style="@style/tv_dbcd_item" android:text="个人中心" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
