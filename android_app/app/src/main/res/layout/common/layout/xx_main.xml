            </LinearLayout>

            <LinearLayout style="@style/ll_xx_main_fl_row">
                <LinearLayout android:id="@+id/llJXHD" style="@style/ll_xx_main_fl_item">
                    <ImageView android:id="@+id/ivJXHD" style="@style/iv_xx_main_fl_item" android:src="@drawable/xx_jxhd" />
                    <TextView android:id="@+id/tvJXHD" style="@style/tv_xx_main_fl_item" android:text="精选活动" />
                </LinearLayout>
                <LinearLayout android:id="@+id/llHDXX" style="@style/ll_xx_main_fl_item">
                    <ImageView android:id="@+id/ivHDXX" style="@style/iv_xx_main_fl_item" android:src="@drawable/xx_hdxx" />
