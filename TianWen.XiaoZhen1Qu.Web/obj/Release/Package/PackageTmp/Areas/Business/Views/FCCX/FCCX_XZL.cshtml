@{
    Layout = "~/Areas/Business/Views/Shared/CXLB.cshtml";
}
@section Section_Head {
    <link href="@Url.Content("~/Areas/Business/Css/CXLB/FCCX.css")" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Content("~/Areas/Business/Scripts/Business/CXLB/FCCX/FCCX_XZL.js")"></script>
    <style type="text/css">
        .div_body .div_body_left .ul_body_left .li_body_left .div_li_body_left_right .p_li_body_left_right .span_zj {
            font-size: 28px;
            font-weight: 700;
            color: #bc6ba6;
            margin-right: 5px;
        }
        .div_body .div_body_left .ul_body_left .li_body_left .div_li_body_left_right .p_li_body_left_right .span_calc_zj {
            font-size: 16px;
            margin-right: 5px;
            color: #666;
        }
    </style>
}
@section Section_Body {
    <div id="divCondition" class="div_condition">
        <ul class="ul_condition_head">
            <li id="li_condition_head_spcz" class="li_condition_head">出租</li>
            <li id="li_condition_head_dtcs" class="li_condition_head">出售</li>
        </ul>
	<div id="div_condition_body_QY" class="div_condition_body"></div>
        <div id="div_condition_body_DD" class="div_condition_body"></div>
        <div id="div_condition_body_XZLLX" class="div_condition_body"></div>
        <div id="div_condition_body_ZJ" class="div_condition_body"></div>
        <div id="div_condition_body_SJ" class="div_condition_body"></div>
        <div id="div_condition_body_MJ" class="div_condition_body"></div>
        <div id="div_condition_body_SF" class="div_condition_body" style="display: none;">
            <ul id="ul_condition_body_SF" class="ul_condition_body">
                <li class="li_condition_body_first">身份</li>
                <li class="li_condition_body">全部</li>
                <li class="li_condition_body">个人</li>
                <li class="li_condition_body">经纪人</li>
            </ul>
        </div>
    </div>
    <div id="divConditionSelect" class="div_condition_select">
        <ul id="ul_condition_select" class="ul_condition_select">
            <li class="li_condition_select_first">条件</li>
        </ul>
    </div>
    <div id="divBody" class="div_body">
        <ul class="ul_body_head">
            <li class="li_body_head" id="li_body_head_first" onclick="SearchByCondition('ALL')"></li>
            <li class="li_body_head" onclick="SearchByCondition('GR')">个人</li>
            <li class="li_body_head" onclick="SearchByCondition('JJR')">经纪人</li>
        </ul>
        <div id="div_body_left" class="div_body_left">
            <ul id="ul_body_left" class="ul_body_left"></ul>
            <div class="div_main_info_bottom">
                <div class="div_main_info_bottom_fy" id="div_main_info_bottom_fy">
                </div>
            </div>
        </div>
        <div class="div_body_right">
            <p class="p_div_body_right">风铃精选</p>
            <ul id="ul_body_right" class="ul_body_right"></ul>
        </div>
    </div>
}