<?xml version="1.0" encoding="utf-8" ?>
<log4net xmlns="urn:log4net">
    <!--默认记录器-->
    <logger name="TDZZ">
        <level value="ALL" />
        <appender-ref ref="TDZZRollingFileAppender" />
    </logger>
    <!--环节记录器-->
    <logger name="StepLogger">
        <level value="ALL" />
        <appender-ref ref="StepRollingFileAppender" />
    </logger>
    <!--导出成功记录器-->
    <logger name="SuccessLog">
        <level value="ALL" />
        <appender-ref ref="SuccessRollingFileAppender" />
    </logger>
    <!--导出失败记录器-->
    <logger name="FailLog">
        <level value="ALL" />
        <appender-ref ref="FailRollingFileAppender" />
    </logger>
    <!--上图成功记录器-->
    <logger name="MapSuccessLog">
      <level value="ALL" />
      <appender-ref ref="MapSuccessRollingFileAppender" />
    </logger>
    <!--上图失败记录器-->
    <logger name="MapFailLog">
      <level value="ALL" />
      <appender-ref ref="MapFailRollingFileAppender" />
    </logger>
    <!--NHibernate记录器-->
    <logger name="NHibernate" additivity="true">
        <level value="ERROR"/>
        <appender-ref ref="NHibernateRollingFileAppender" />
    </logger>
    <logger name="NHibernate.SQL" additivity="true">
        <level value="ERROR"/>
        <appender-ref ref="NHibernateRollingFileAppender" />
    </logger>
    <!--Appender配置-->
    <appender name="TDZZRollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <file value=".\BusinessLog\Main\" />
        <appendToFile value="true" />
        <datePattern value="yyyy-MM-dd&quot;\\MainLog.txt&quot;" />
        <staticLogFileName value="false"></staticLogFileName>
        <rollingStyle value ="Date"></rollingStyle>
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <layout type="Teleware.Framework.Log.Layout.TelewareFileLayout,Teleware.Framework">
            <!--<conversionPattern value="%date %-5level %logger [%BizType] [%EventNo] [%Description] %message %newline%TelewareContext" />-->
            <conversionPattern value="%date %-5level %logger [%BizType] %Description %newline" />
        </layout>
    </appender>
    <appender name="StepRollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <file value=".\BusinessLog\Step\" />
        <appendToFile value="true" />
        <datePattern value="yyyy-MM-dd&quot;\\StepLog.txt&quot;" />
        <staticLogFileName value="false"></staticLogFileName>
        <rollingStyle value ="Date"></rollingStyle>
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <layout type="Teleware.Framework.Log.Layout.TelewareFileLayout,Teleware.Framework">
            <conversionPattern value="%date %-5level %logger [%BizType] %Description %newline" />
        </layout>
    </appender>
    <appender name="SuccessRollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <file value=".\BusinessLog\Success\" />
        <appendToFile value="true" />
        <datePattern value="yyyy-MM-dd&quot;\\SuccessLog.txt&quot;" />
        <staticLogFileName value="false"></staticLogFileName>
        <rollingStyle value ="Date"></rollingStyle>
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <layout type="Teleware.Framework.Log.Layout.TelewareFileLayout,Teleware.Framework">
            <conversionPattern value="%date %-5level %logger [%BizType] %Description %newline" />
        </layout>
    </appender>
    <appender name="FailRollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <file value=".\BusinessLog\Fail\" />
        <appendToFile value="true" />
        <datePattern value="yyyy-MM-dd&quot;\\FailLog.txt&quot;" />
        <staticLogFileName value="false"></staticLogFileName>
        <rollingStyle value ="Date"></rollingStyle>
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <layout type="Teleware.Framework.Log.Layout.TelewareFileLayout,Teleware.Framework">
            <conversionPattern value="%date %-5level %logger [%BizType] %Description %newline" />
        </layout>
    </appender>
    <appender name="NHibernateRollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <file value=".\BusinessLog\NHibernate\" />
        <appendToFile value="true" />
        <datePattern value="yyyy-MM-dd&quot;\\NHibernate.txt&quot;" />
        <staticLogFileName value="false"></staticLogFileName>
        <rollingStyle value ="Date"></rollingStyle>
        <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
        <layout type="log4net.Layout.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] - %m%n%n" />
        </layout>
    </appender>
    <appender name="MapSuccessRollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value=".\BusinessLog\MapSuccess\" />
      <appendToFile value="true" />
      <datePattern value="yyyy-MM-dd&quot;\\SuccessLog.txt&quot;" />
      <staticLogFileName value="false"></staticLogFileName>
      <rollingStyle value ="Date"></rollingStyle>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="Teleware.Framework.Log.Layout.TelewareFileLayout,Teleware.Framework">
        <conversionPattern value="%date %-5level %logger [%BizType] %Description %newline" />
      </layout>
    </appender>
    <appender name="MapFailRollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value=".\BusinessLog\MapFail\" />
      <appendToFile value="true" />
      <datePattern value="yyyy-MM-dd&quot;\\FailLog.txt&quot;" />
      <staticLogFileName value="false"></staticLogFileName>
      <rollingStyle value ="Date"></rollingStyle>
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="Teleware.Framework.Log.Layout.TelewareFileLayout,Teleware.Framework">
        <conversionPattern value="%date %-5level %logger [%BizType] %Description %newline" />
      </layout>
    </appender>
</log4net>