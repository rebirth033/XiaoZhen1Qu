@{
    Layout = "~/Areas/Business/Views/Shared/CXLB.cshtml";
}
@section Section_Head {
    <link href="@Url.Content("~/Areas/Business/Css/CXLB/CLCX.css")" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Content("~/Areas/Business/Scripts/Business/CXLB/CLCX/CLCX_JC.js")"></script>
}
@section Section_Body {
    <div id="divCondition" class="div_condition">
        <div id="div_condition_body_PP" class="div_condition_body" style="padding-top: 20px;"></div>
        <div id="div_condition_body_CX" class="div_condition_body"></div>
        <div id="div_condition_body_JG" class="div_condition_body"></div>
	<div id="div_condition_body_QT" class="div_condition_body">
		<ul class="ul_condition_body" id="ul_condition_body_CL" style="height: auto;">
		    <li class="li_condition_body_first">其他</li>
		    <li class="li_condition_body" style="margin-right:10px;">
                        <div id="divCLText" class="div_select_out">
                        <div id="divCLSpan" class="div_select_in">
                        <span id="spanCL" column="CL" class="span_select spaninput_fontcolor">车龄不限</span>
                        <div class="span_select_arrow"></div>
                        </div>
                        <div id="divCL" class="div_select_dropdown"></div>
                        </div>
                    </li>
 		    <li class="li_condition_body" style="margin-right:10px;">
                        <div id="divPLText" class="div_select_out">
                        <div id="divPLSpan" class="div_select_in">
                        <span id="spanPL" column="PL" class="span_select spaninput_fontcolor">排量不限</span>
                        <div class="span_select_arrow"></div>
                        </div>
                        <div id="divPL" class="div_select_dropdown"></div>
                        </div>
                    </li>
		    <li class="li_condition_body" style="margin-right:10px;">
                        <div id="divLCText" class="div_select_out">
                        <div id="divLCSpan" class="div_select_in">
                        <span id="spanLC" column="LC" class="span_select spaninput_fontcolor">里程不限</span>
                        <div class="span_select_arrow"></div>
                        </div>
                        <div id="divLC" class="div_select_dropdown"></div>
                        </div>
                    </li>
		    <li class="li_condition_body" style="margin-right:10px;">
                        <div id="divBSXText" class="div_select_out">
                        <div id="divBSXSpan" class="div_select_in">
                        <span id="spanBSX" column="BSX" class="span_select spaninput_fontcolor">变速不限</span>
                        <div class="span_select_arrow"></div>
                        </div>
                        <div id="divBSX" class="div_select_dropdown"></div>
                        </div>
                    </li>
		    <li class="li_condition_body" style="margin-right:10px;">
                        <div id="divCLYSText" class="div_select_out">
                        <div id="divCLYSpan" class="div_select_in">
                        <span id="spanCLYS" column="CLYS" class="span_select spaninput_fontcolor">颜色不限</span>
                        <div class="span_select_arrow"></div>
                        </div>
                        <div id="divCLYS" class="div_select_dropdown"></div>
                        </div>
                    </li>
	        </ul>
	    </div>
        <div id="div_condition_body_SF" class="div_condition_body" style="display: none;">
            <ul id="ul_condition_body_SF" class="ul_condition_body">
                <li class="li_condition_body_first">身份</li>
                <li class="li_condition_body">全部</li>
                <li class="li_condition_body">个人</li>
                <li class="li_condition_body">商家</li>
            </ul>
        </div>
    </div>
    <div id="divConditionSelect" class="div_condition_select">
        <ul id="ul_condition_select" class="ul_condition_select">
            <li class="li_condition_select_first">条件</li>
        </ul>
    </div>
    <div class="div_condition_toggle">
    </div>
    <div id="divBody" class="div_body" style="margin-top: 0;">
        <ul class="ul_body_head">
            <li class="li_body_head" id="li_body_head_first" onclick="SearchByCondition('ALL')"></li>
            <li class="li_body_head" onclick="SearchByCondition('GR')">个人</li>
            <li class="li_body_head" onclick="SearchByCondition('SJ')">商家</li>
        </ul>
        <div id="div_body_left" class="div_body_left">
            <ul id="ul_body_left" class="ul_body_left"></ul>
            <div class="div_main_info_bottom">
                <div class="div_main_info_bottom_fy" id="div_main_info_bottom_fy">
                </div>
            </div>
        </div>
        <div class="div_body_right">
            <p class="p_div_body_right">风铃精选</p>
            <ul id="ul_body_right" class="ul_body_right"></ul>
        </div>
