@{
    if (ViewBag.ISW3C == null || ViewBag.ISW3C == true)
    {
        Response.Write("<!DOCTYPE html>");
    }
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
        <script type="text/javascript" src="@Url.Content("~/Areas/Business/Scripts/JQuery/jquery-1.8.0.min.js")"></script>
        <script type="text/javascript">
        function ReplaceStr(str) {
            str = str.replace(new RegExp("'", "gi"), "");
            str = str.replace(new RegExp("<", "gi"), "");
            str = str.replace(new RegExp(">", "gi"), "");
            str = str.replace(new RegExp("\"", "gi"), "");
            str = str.replace(new RegExp("#", "gi"), "");
            str = str.replace(new RegExp("$", "gi"), "");
            return str;
        }
        //表单中所有text，有数字验证的只允许输入数字和小数点。
        $(document).ready(function () {
            $(":text").each(function () {
                if ($(this).attr("pattern") == "^[0-9]+(.[0-9]{1,4})?$") {
                    $(this).attr("pattern", "^(-?\\d+)(\\.\\d{1,4})?");
                    $(this).attr("onKeyPress", "if (event.keyCode!=46 && event.keyCode!=45 && (event.keyCode<48 || event.keyCode>57)) event.returnValue=false");
                }
            });
        });
    </script>
     @RenderSection("Section_Head", false)
</head>
<body>
@using (Html.BeginForm())
{
    @RenderBody()
}
@RenderSection("Section_Body", false)
</body>
</html>
